{
  "name": "@iocraft/root",
  "description": "Monorepo for iocraft",
  "private": true,
  "scripts": {
    "i:all": "pnpm --recursive install",
    "clean": "find . -name node_modules -type d -exec rm -rf {} + && rm -rf node_modules",
    "iocraft:build": "pnpm --filter iocraft build",
    "iocraft:dev": "pnpm --filter iocraft dev",
    "playground:dev": "pnpm --filter @iocraft/playground dev",
    "typecheck": "pnpm --recursive typecheck",
    "iocraft:test": "pnpm --filter iocraft  test",
    "iocraft:bench": "pnpm --filter iocraft  bench",
    "docs:dev": "pnpm --filter @iocraft/docs dev",
    "docs:build": "pnpm --filter @iocraft/docs  build",
    "docs:preview": "pnpm --filter @iocraft/docs preview"
  },
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "~5.9.3"
  }
}